                },
                1000: {
                    items: 4
                }
            }
        })
    </script>
    <script>
        $(document).ready(function () {
            $(window).scroll(function () {
                console.log("scroll")
                if ($(window).scrollTop() > $(window).height() / 3) {
                    $(".menu").css({ "background-color": "white" });
                    $(".nvv").css({ "color": "gray" });
                }
                else {
                    $(".menu").css({ "background-color": "transparent" });
